<h3 class="px-2" style="width:fit-content;background-color:#e4e4e4;">会員登録</h3>
<div class="col-8 mt-4 mx-auto">
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <div class="form-group row">
      <label class="col-sm-4 col-form-label">名前</label>
      <div class="col-md-8">
        <%= f.text_field :name, placeholder: "蹴球太郎", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-4 col-form-label">メールアドレス</label>
      <div class="col-md-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-4 col-form-label">パスワード(6文字以上)</label>
      <div class="col-md-8">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-4 col-form-label">パスワード(確認用)</label>
      <div class="col-md-8">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>
    <div class="mt-5 text-center">
      <%= f.submit "新規登録", class: "col-3 btn btn-success" %>
    </div>
  <% end %>
</div>
<div class="ml-5 mt-5">
  <h5>既に登録済みの方</h5>
  <div class="ml-5">
    <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
  </div>
</div>