<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>チーム名（略称）</th>
      <th>監督</th>
    </tr>
  </thead>
  <tbody>
    <% teams.each do |team| %>
      <tr>
        <td>
          <div class="border border-dark" style="width:fit-content;">
            <%= image_tag team.get_team_image(48,32) %>
          </div>
        </td>
        <td>
          <%= link_to team_path(team.id) do %>
            <%= team.name %>(<%= team.abbreviation %>)
          <% end %>
        </td>
        <td><%= team.manager %></td>
      </tr>
    <% end %>
    <%= paginate teams %>
  </tbody>
</table>