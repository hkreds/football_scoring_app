<h3 class="px-2" style="width:fit-content;background-color:#e4e4e4;">選手登録・一覧ページ</h3>
<div class="my-5">
  <%= form_with model: [:admin, @player] do |f| %>
    <%= render 'layouts/errors', obj: @player %>
    <table class="table table-sm table-borderless">
      <thead>
        <tr>
          <th>選手名</th>
          <th>生年月日</th>
          <th>身長(cm)</th>
          <th>体重(kg)</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= f.text_field :name, :size=>"35", placeholder:"選手名" %></td>
          <td><%= f.text_field :birthday, placeholder:"20220101" %></td>
          <td><%= f.text_field :height, placeholder:"180" %></td>
          <td><%= f.text_field :weight, placeholder:"75" %></td>
          <td></td>
        </tr>
        <tr>
          <td colspan="3"></td>
          <td class="text-right"><%= f.submit "新規登録", class: "ml-5 btn btn-primary" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>選手名</th>
      <th>生年月日(年齢)</th>
      <th>身長</th>
      <th>体重</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.id %></td>
        <td>
          <%= link_to admin_player_path(player.id) do %>
            <%= player.name %>
          <% end %>
        </td>
        <td>
          <%= player.birthday.strftime('%Y/%m/%d') %>
          (<%= player.age %>歳)
        </td>
        <td><%= player.height %>cm</td>
        <td><%= player.weight %>kg</td>
        <td class="text-center"><%= link_to "編集する", edit_admin_player_path(player.id), class: "btn btn-sm btn-success" %></td>
      </tr>
    <% end %>
    <%= paginate @players %>
  </tbody>
</table>