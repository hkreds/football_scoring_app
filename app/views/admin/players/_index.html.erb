<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>選手名</th>
      <th>生年月日(年齢)</th>
      <th>身長</th>
      <th>体重</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% players.each do |player| %>
      <tr>
        <td><%= player.id %></td>
        <td>
          <%= link_to admin_player_path(player.id) do %>
            <%= player.name %>
          <% end %>
        </td>
        <td>
          <% unless player.birthday == nil %>
            <%= player.birthday.strftime('%Y/%m/%d') %>
            (<%= player.age %>歳)
          <% else %>
            データ無し
          <% end %>
        </td>
        <td>
          <% unless player.height == nil %>
            <%= player.height %>cm
          <% else %>
            データ無し
          <% end %>
        </td>
        <td>
          <% unless player.weight == nil %>
            <%= player.weight %>kg
          <% else %>
            データ無し
          <% end %>
        </td>
        <td class="text-center"><%= link_to "編集する", edit_admin_player_path(player.id), class: "btn btn-sm btn-success" %></td>
      </tr>
    <% end %>
    <%= paginate players %>
  </tbody>
</table>