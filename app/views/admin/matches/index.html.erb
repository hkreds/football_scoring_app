<h3 class="px-2" style="width:fit-content;background-color:#e4e4e4;">試合登録・一覧ページ</h3>
<div class="my-5">
  <%= form_with model: [:admin, @match] do |f| %>
    <%= render 'layouts/errors', obj: @match %>
    <table class="table table-borderless">
      <thead>
        <tr>
          <th>大会名</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><div class="mb-2"><%= f.collection_select :convention_id, Convention.all, :id, :name, {include_blank: "--選択してください--"} %></div></td>
        </tr>
      </tbody>
    </table>
    <table class="table table-borderless">
      <thead>
        <tr>
          <th>ホームチーム</th>
          <th>アウェイチーム</th>
          <th>開始日時（日本時間）</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><div class="mb-2"><%= f.collection_select :home_team_id, Team.all, :id, :name, {include_blank: "--選択してください--"} %></div></td>
          <td><div class="mb-2"><%= f.collection_select :away_team_id, Team.all, :id, :name, {include_blank: "--選択してください--"} %></div></td>
          <td><%= f.text_field :start_time, placeholder:"20220101120000" %></td>
          <td><%= f.submit "新規登録", class: "ml-5 btn btn-primary" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>大会名</th>
      <th>試合名</th>
      <th>開始日時（日本時間）</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td>
          <%= link_to admin_convention_path(match.convention_id) do %>
            <%= match.convention.name %>
          <% end %>
        </td>
        <td><%#= match.home_team.name %> vs <%#= match.away_team.name %></td>
        <td><%= match.start_time.strftime('%Y/%m/%d %H:%M') %></td>
        <td class="text-center"><%= link_to "編集する", edit_admin_match_path(match.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>