<h3 class="px-2" style="width:fit-content;background-color:#e4e4e4;">
  <strong><%= @convention.name %></strong>
</h3>
<h4 class="px-2 mb-1 ml-5" style="width:fit-content;background-color:#e4e4e4;">出場チーム変更</h3>
<div class="my-1 ml-5">
  <%= form_with model:[:admin, @participating_team] do |f| %>
    <%= render 'layouts/errors', obj: @participating_team %>
    <table class="table table-borderless">
      <thead>
        <tr>
          <th>チーム名</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= f.collection_select :team_id, Team.all, :id, :name, {include_blank: "--選択してください--"} %></td>
          <td><%= f.hidden_field :convention_id, :value => @convention.id %></td>
          <td><%= f.submit "変更する", class: "btn btn-success" %></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td><%= link_to "削除する", admin_participating_team_path(@participating_team.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "ml-2 btn btn-danger" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>