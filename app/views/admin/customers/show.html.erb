<h3 class="px-2" style="width:fit-content;background-color:#e4e4e4;">
  <%= @customer.name %>さんの詳細ページ
</h3>
<div class="row mt-3">
  <div class="col-3">
    <%= image_tag @customer.get_profile_image(100,100) %>
    <%= link_to "編集ページへ", edit_admin_customer_path %>
  </div>
  <div class="col-7 ml-4">
    <table class="table table-borderless">
      <tr>
        <th>会員ID</th>
        <th><%= @customer.id %></th>
      </tr>
      <tr>
        <th style="width: 30%;">名前</th>
        <th>
          <%= @customer.name %>
        </th>
      </tr>
      <tr>
        <th>自己紹介</th>
        <th><%= @customer.introduction %></th>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <th><%= @customer.email %></th>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <th>
          <% if @customer.is_deleted == false %>
            <span class="text-success font-weight-bold">有効</span>
          <% else %>
            <span class="text-secondary">退会</span>
          <% end %>
        </th>
      </tr>
    </table>
  </div>
</div>
<h3 class="px-2" style="width:fit-content;background-color:#e4e4e4;">
  <%= @customer.name %>さんの採点一覧
</h3>